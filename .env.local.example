# Firebase Configuration (already in firebase.ts)
# These are public and safe to expose in client-side code

# Google Gemini AI API Key (REQUIRED)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=CraftlyCV

# Firebase Functions (for production)
NEXT_PUBLIC_FIREBASE_FUNCTIONS_URL=https://us-central1-craftlycv.cloudfunctions.net

# Development Settings
NODE_ENV=development

# Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-QJ3HRSQ717

# Rate Limiting (for AI API calls)
AI_RATE_LIMIT_PER_MINUTE=10
AI_RATE_LIMIT_PER_HOUR=100

# PDF Generation Settings
PDF_GENERATION_TIMEOUT=30000

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000